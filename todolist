<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        
	<style>
	ul{list-style-type: none;}
	.doc{
   	 	position: absolute;
    		right: 10px;
		}

	</style>
        <title>Название сайта</title>
        <script>
		function DeleteTask(e){
			   var elem = document.getElementById(e.id);
			   return elem.parentNode.removeChild(elem);
			   }
		var n = 0;
		function NewRecord() {
		  var InputRecord = document.getElementById("place").value;
		    if(InputRecord === '') {alert('Введите задачу')}
		     else {
			var element =  document.getElementById('list');
			var item = document.createElement('li');
			var btn = document.createElement('input');
			 item.id = n;
			 btn.id = n;
			 btn.className = 'doc';
			 btn.type = 'button';
			 btn.value = 'Delete';
			 btn.setAttribute('onclick','DeleteTask(this)');
			 item.innerHTML = InputRecord;
			 element.appendChild(item);
			 item.appendChild(btn);
			 document.getElementById("place").value = "";
			 n = ++n;
		     }


		}

    </script>
    </head>
    <body>
        <div>
            <input type="text" id="place" size='40' placeholder='...'>
            <input type="button" Onclick="NewRecord()" id="add" value="ADD">
        </div>
        <ul id="list">
            <li class = "item">
                <input type ="checkbox" class="checlbox">
                <label class="task">Задача 1</label>
                <input type ="button" class="delete" onClick="DeleteTask()" value="Delete">
            </li>
        </ul>
        <div id="out"> Vlad</div>
    </body>
</html>
